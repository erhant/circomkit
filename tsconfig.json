{
  "compilerOptions": {
    "declaration": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    // to be used with bundler: pkgroll
    "moduleResolution": "Bundler",
    "module": "Preserve",
    "target": "ES6"
  },
  "files": ["./hardhat.config.ts"],
  "include": ["src/**/*.*", "tests/**/*.*"],
  "exclude": ["node_modules"]
}
