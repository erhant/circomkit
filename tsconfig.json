{
  "compilerOptions": {
    "declaration": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES6",
    // to be used with bundler: pkgroll
    "moduleResolution": "Bundler",
    "module": "Preserve",
    "types": ["jest", "node"]
  },
  "include": ["src/**/*.*", "tests/**/*.ts"],
  "exclude": ["node_modules", "tests"]
}
